<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.fujinbang.activity.RechargeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFAF00">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分充值"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥5"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥10"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥15"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥20"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥50"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500积分"
                android:layout_margin="20dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_recharge_150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zy_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:text="￥150"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include layout="@layout/division"/>
    </LinearLayout>
</LinearLayout>
