<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="#FCFCFC">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <TextView
        android:id="@+id/item_now_child_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务简述："/>
        <TextView
            android:id="@+id/item_now_child_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_now_child_hint1"
            android:layout_toLeftOf="@+id/item_now_child_bonus"/>
        <TextView
            android:id="@+id/item_now_child_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_now_child_desc"
            android:text="起止时间："/>
        <TextView
            android:id="@+id/item_now_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_now_child_desc"
            android:layout_toRightOf="@+id/item_now_child_hint2"
            android:layout_toLeftOf="@+id/item_now_child_bonus"
            android:layout_marginTop="2dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/item_now_child_bonus"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
