<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fujinbang.activity.PersonalHelpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFAF00">

        <ImageView
            android:id="@+id/personal_help_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="求助详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述需求"
                android:textSize="20sp"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/personal_help_reqdes"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:maxHeight="50dp"
                    android:maxLength="100"
                    />
                <FrameLayout
                    android:id="@+id/personal_help_recoder_lenght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chatto_bg_focused"
                    android:clickable="true"
                    >
                    <View android:id="@+id/personal_help_recoder_anim"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical|start"
                        android:background="@drawable/adj"
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/personal_help_recoder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:text="1'"
                    android:layout_marginLeft="8dp"
                    android:textColor="#ff777777"
                    android:layout_toRightOf="@+id/personal_help_recoder_lenght"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="起止时间"
                android:textSize="20sp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/personal_help_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="12-16 15:15"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="至"/>
            <TextView
                android:id="@+id/personal_help_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="12-16 15:15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="奖励积分"
                android:textSize="20sp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/personal_help_textbonus"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="200"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="任务人数"
                android:textSize="20sp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/personal_help_num"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="3"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="性别要求"
                android:textSize="20sp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/personal_help_sex"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="男"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:background="@drawable/helplist_location"/>
            <TextView
                android:id="@+id/personal_help_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳南山区华侨城生态广场"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="#3333FF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/personal_help_refuse_btn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="54dp"
                android:background="@drawable/refuse_btn"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:text="拒绝"/>
            <Button
                android:id="@+id/personal_help_accept_btn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/login_btn"
                android:textSize="16dp"
                android:text="接单"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
