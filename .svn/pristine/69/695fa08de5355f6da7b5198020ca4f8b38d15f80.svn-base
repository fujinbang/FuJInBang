<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFAF00">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="任务中心"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/mission_checkin_bg">

                    <com.fujinbang.view.CheckInButton
                        android:id="@+id/cib_check_in"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mission_checkin" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="邀请好友使用，收获更多积分。"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_mission_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"
                            android:text="详情"
                            android:textColor="#FFAF00"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <include layout="@layout/division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fcfcfc">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/ll_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/qq" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:text="QQ"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_alignLeft="@+id/ll_qq"
                                android:layout_alignRight="@+id/ll_qq"
                                android:layout_below="@+id/ll_qq"
                                android:background="#D4D4D4" />

                            <LinearLayout
                                android:id="@+id/ll_sms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/ll_qq"
                                android:layout_below="@+id/ll_qq">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/sms" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:text="短信"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/ll_wechat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/wechat" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:text="微信"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_alignLeft="@+id/ll_wechat"
                                android:layout_alignRight="@+id/ll_wechat"
                                android:layout_below="@+id/ll_wechat"
                                android:background="#D4D4D4" />

                            <LinearLayout
                                android:id="@+id/ll_weibo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/ll_wechat"
                                android:layout_below="@+id/ll_wechat">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/weibo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:text="微博"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <include layout="@layout/division" />

                    <include
                        layout="@layout/division"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp" />

                    <LinearLayout
                        android:id="@+id/ll_mission_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fcfcfc">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mission_list" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="任务清单"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_mission_indicator"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:padding="10dp"
                            android:src="@drawable/mission_list_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mission_sub_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D4D4D4" />

                        <ListView
                            android:id="@+id/lv_list_mission"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" />
                    </LinearLayout>

                    <include layout="@layout/division" />

                    <LinearLayout
                        android:id="@+id/ll_mission_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fcfcfc">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mission_record" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="任务记录"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <include layout="@layout/division" />

                    <LinearLayout
                        android:id="@+id/ll_mission_rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fcfcfc">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mission_rule" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="说明"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <include layout="@layout/division" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>