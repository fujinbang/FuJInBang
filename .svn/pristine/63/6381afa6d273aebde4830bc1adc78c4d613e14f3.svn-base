<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.fujinbang.activity.AddContactActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFAF00">
        <RelativeLayout
            android:id="@+id/add_contact_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/add_contact_back"
            android:layout_toEndOf="@+id/add_contact_back"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/add_contact_search_img"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/ease_search_bar_icon_normal"/>
            <EditText
                android:id="@+id/add_contact_phonenum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/add_contact_search_img"
                android:layout_toEndOf="@+id/add_contact_search_img"
                android:textColor="#fff"
                android:inputType="number"
                android:textSize="18sp"
                android:background="#FFAF00"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_contact_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ease_search_bar_icon_normal"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="搜索"/>
        <TextView
            android:id="@+id/add_contact_shownum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#0000FF"/>
    </LinearLayout>


</LinearLayout>
