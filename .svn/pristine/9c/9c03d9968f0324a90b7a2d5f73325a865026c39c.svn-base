<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@android:color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="19dp"
        android:text="客官，欢迎来到附近帮，请先登录哟。"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="54dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="手机号码"
            android:layout_marginLeft="16dp" />
        <EditText
            android:id="@+id/login_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:hint="请输入您的手机号码"
            android:textColorHint="#D7D7D7"
            android:background="@drawable/edittext"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="密码"
            android:layout_marginLeft="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/login_editText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:hint="请输入密码"
                android:textColorHint="#D7D7D7"
                android:background="@drawable/edittext"
                android:password="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageButton
                android:id="@+id/login_see_password"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:background="@drawable/eye"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/login_editText2"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/login_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_light"
        android:text="账号或密码错误，请重新输入"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/login_register_btn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginRight="54dp"
            android:background="@drawable/register_btn"
            android:textSize="16dp"
            android:text="注册"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/login_btn"
            android:textSize="16dp"
            android:text="登录"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/login_forget_psw"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:textSize="18dp"
        android:text="忘记密码？"
        android:textColor="@android:color/holo_red_light"/>
</LinearLayout>