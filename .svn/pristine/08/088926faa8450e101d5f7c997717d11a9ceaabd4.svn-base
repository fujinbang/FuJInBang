<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_800"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="800m"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1000m"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1500"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1500m"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2000m"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3000m"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/zy_linearlayout_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorFuJinBang"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
